<% if user_signed_in? %>
  <% if @post.like_user(current_user.id) %>
    <%= button_to post_like_path(id: @like, post_id: @post.id), method: :delete, id: "like-button", remote: true do %>
      <i class="fa fa-heart" aria-hidden="true"></i>
      <span>
        <%= @post.likes_count %>
        
      </span>
    <% end %>
  <% else %>
    <%= button_to post_likes_path(@post), id: "like-button", remote: true do %>
      <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
      <span>
        <%= @post.likes_count %>
        
      </span>
    <% end %>
  <% end %>
<% else %>
  <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
    <span>
      <%= @post.likes_count %>
  
    </span>
<% end %>
